<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/row_checkbox_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/abc_action_bar_home_description"
        android:textSize="@dimen/row_with_checkbox_text_size"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/row_with_checkbox_left_margin"
        android:layout_marginLeft="@dimen/row_with_checkbox_left_margin"
        >
    </TextView>

    <CheckBox
        android:id="@+id/row_checkbox_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp" >
    </CheckBox>


</RelativeLayout>
